<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/logocolor3"
    tools:context=".ScanDriverActivity">

    <Button
        android:id="@+id/scan_dri_qr"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_margin="20dp"
        android:background="@drawable/buttonblack"
        android:padding="17dp"
        android:text="Scan QR Code"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/dri_qr_read"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_below="@+id/scan_dri_qr"
        android:gravity="center"
        android:hint="Please Scan the QR code in front of you"/>

    <Button
        android:id="@+id/dri_day_start"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="@drawable/buttonblack"
        android:padding="17dp"
        android:layout_margin="20dp"
        android:text="Start Your Day"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_below="@+id/dri_qr_read"/>

    <Button
        android:id="@+id/dri_day_stop"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_margin="20dp"
        android:background="@drawable/buttonblack"
        android:padding="17dp"
        android:text="End Your Day"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_below="@+id/dri_day_start"/>

</RelativeLayout>